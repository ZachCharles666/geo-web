---
/* E_main.astro — GEO Tools Suite (EN Version · Style Preserved) */
---

<!-- Features -->
<section class="w-full max-w-[100rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14 mx-auto" aria-labelledby="geo-tools-title">
  <!-- Title -->
  <div class="mx-auto max-w-2xl mb-8 lg:mb-14 text-center">
    <h2 id="geo-tools-title" class="text-3xl lg:text-4xl text-gray-800 font-bold dark:text-gray-200">
      GEO Tools Suite: Diagnose, Score, Optimize
    </h2>
    <p class="mt-2 text-gray-600 dark:text-gray-300">
      A lightweight toolkit for creators, teams, and enterprises to improve AI visibility.
    </p>

  </div>
  <!-- End Title -->

  <div class="relative xl:w-full xl:mx-auto">

    <!-- Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-1 xl:grid-cols-2 gap-6 lg:gap-8">
      
      <!-- Card · Content Diagnostics -->
      <article class="p-4 relative z-10 bg-white border rounded-xl md:p-10 dark:bg-slate-900 dark:border-gray-700" 
               itemscope itemtype="https://schema.org/SoftwareApplication">

        <h3 class="text-xl font-bold text-gray-800 dark:text-gray-200" itemprop="name">
          Content Diagnostics (Solo / Pro)
        </h3>
        <p class="text-sm text-gray-500" itemprop="description">
          Uncover weaknesses, missing evidence, and structural issues that limit AI visibility.
        </p>

        <div class="mt-5 grid sm:grid-cols-2 gap-y-2 py-4 sm:gap-x-6 sm:gap-y-0">
          <!-- List -->
          <ul role="list" class="space-y-2 text-sm sm:text-base">
            <li class="flex space-x-3">
              <svg class="flex-shrink-0 h-5 w-5 text-indigo-500" ...>...</svg>
              <span class="text-gray-800 dark:text-gray-200">
                Multi-model visibility check (10+ AI engines)
              </span>
            </li>
            <li class="flex space-x-3">
              <svg class="flex-shrink-0 h-5 w-5 text-indigo-500" ...>...</svg>
              <span class="text-gray-800 dark:text-gray-200">
                Machine scoring for consistency & reproducibility
              </span>
            </li>
            <li class="flex space-x-3">
              <svg class="flex-shrink-0 h-5 w-5 text-indigo-500" ...>...</svg>
              <span class="text-gray-800 dark:text-gray-200">
                Schema.org suggestions & auto-fill
              </span>
            </li>
          </ul>

          <!-- List -->
          <ul role="list" class="space-y-2 text-sm sm:text-base">
            <li class="flex space-x-3">
              <svg class="flex-shrink-0 h-5 w-5 text-gray-500" ...>...</svg>
              <span class="text-gray-800 dark:text-gray-200">Export: Markdown / HTML / JSON</span>
            </li>
            <li class="flex space-x-3">
              <svg class="flex-shrink-0 h-5 w-5 text-gray-500" ...>...</svg>
              <span class="text-gray-800 dark:text-gray-200">
                One-click reasoning-chain draft
              </span>
            </li>
            <li class="flex space-x-3">
              <svg class="flex-shrink-0 h-5 w-5 text-gray-500" ...>...</svg>
              <span class="text-gray-800 dark:text-gray-200">Starter templates included</span>
            </li>
          </ul>
        </div>

        <div class="mt-5 grid grid-cols-2 gap-x-4 py-4">
          <div>
            <p class="text-sm text-gray-500">Cancel anytime · No credit card required</p>
          </div>
          <div class="flex justify-end">
            <a href="#" class="py-3 px-4 inline-flex justify-center items-center gap-2 rounded-md border font-medium bg-white text-gray-700 shadow-sm hover:bg-gray-50 dark:bg-slate-900 dark:hover:bg-slate-800 dark:border-gray-700 dark:text-gray-400 dark:hover:text-white">
              Start Now
            </a>
          </div>
        </div>

        <meta itemprop="applicationCategory" content="BusinessApplication" />
        <link itemprop="url" href="/tools/diagnose" />
      </article>
      <!-- End Card -->

      <!-- Card · GEO-Score & Reports -->
      <article class="shadow-xl shadow-gray-200 p-5 relative z-10 bg-white border rounded-xl md:p-10 dark:bg-slate-900 dark:border-gray-700 dark:shadow-gray-900/[.2]" 
               itemscope itemtype="https://schema.org/SoftwareApplication">

        <h3 class="text-xl font-bold text-gray-800 dark:text-gray-200" itemprop="name">
          GEO-Score & Automated Reports (Teams)
        </h3>
        <p class="text-sm text-gray-500">
          For teams that need dashboards, comparisons, and automated end-to-end reporting.
        </p>

        <span class="absolute top-0 right-0 rounded-tr-xl rounded-bl-xl text-xs font-medium bg-gray-800 text-white py-1.5 px-3">
          Most popular
        </span>

        <div class="mt-5 grid sm:grid-cols-2 gap-y-2 py-4 sm:gap-x-6 sm:gap-y-0">

          <ul role="list" class="space-y-2 text-sm sm:text-base">
            <li class="flex space-x-3">
              <svg class="flex-shrink-0 h-5 w-5 text-indigo-500" ...>...</svg>
              <span class="text-gray-800 dark:text-gray-200">Multi-dimension GEO-Score panel</span>
            </li>
            <li class="flex space-x-3">
              <svg class="flex-shrink-0 h-5 w-5 text-indigo-500" ...>...</svg>
              <span class="text-gray-800 dark:text-gray-200">Cross-model comparison (customizable)</span>
            </li>
            <li class="flex space-x-3">
              <svg class="flex-shrink-0 h-5 w-5 text-indigo-500" ...>...</svg>
              <span class="text-gray-800 dark:text-gray-200">Automated reports (PDF / HTML / MD)</span>
            </li>
          </ul>

          <ul role="list" class="space-y-2 text-sm sm:text-base">
            <li class="flex space-x-3">
              <svg class="flex-shrink-0 h-5 w-5 text-indigo-500" ...>...</svg>
              <span class="text-gray-800 dark:text-gray-200">Team collaboration & role permissions</span>
            </li>
            <li class="flex space-x-3">
              <svg class="flex-shrink-0 h-5 w-5 text-indigo-500" ...>...</svg>
              <span class="text-gray-800 dark:text-gray-200">Version history & diff tracking</span>
            </li>
            <li class="flex space-x-3">
              <svg class="flex-shrink-0 h-5 w-5 text-indigo-500" ...>...</svg>
              <span class="text-gray-800 dark:text-gray-200">Webhook/API integration</span>
            </li>
          </ul>
        </div>

        <div class="mt-5 grid grid-cols-2 gap-x-4 py-4">
          <div>
            <p class="text-sm text-gray-500">Cancel anytime · No credit card required</p>
          </div>
          <div class="flex justify-end">
            <a href="#" class="py-3 px-4 inline-flex justify-center items-center gap-2 rounded-md border-transparent border font-semibold bg-indigo-500 text-white hover:bg-indigo-600 focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">
              Try Scoring
            </a>
          </div>
        </div>

        <meta itemprop="applicationCategory" content="AnalyticsApplication" />
        <link itemprop="url" href="/tools/score" />
      </article>
      <!-- End Card -->

    </div>
    <!-- End Grid -->

    <!-- Decorations -->
    <div class="hidden md:block absolute top-0 right-0 translate-y-16 translate-x-16"></div>
    <div class="hidden md:block absolute bottom-0 left-0 translate-y-16 -translate-x-16"></div>
  </div>

  <div class="mt-7 text-center">
    <p class="text-xs text-gray-400">* Features subject to actual release.</p>
  </div>

  <!-- JSON-LD (English GEO + SEO optimized) -->
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "ItemList",
    "name": "GEO-Max Tools Suite",
    "description": "GEO-Max provides diagnostics, scoring tools, and automated reports designed for individuals and teams to improve AI search visibility and content reliability.",
    "itemListOrder": "ItemListOrderAscending",
    "numberOfItems": 2,
    "itemListElement": [
      {
        "@type": "SoftwareApplication",
        "position": 1,
        "name": "Content Diagnostics (Solo / Pro)",
        "applicationCategory": "BusinessApplication",
        "operatingSystem": "Web",
        "url": "https://geo-max.tech/tools/diagnose",
        "offers": {
          "@type": "Offer",
          "price": "0",
          "priceCurrency": "USD",
          "category": "FreeTrial",
          "availability": "https://schema.org/InStock"
        },
        "publisher": {
          "@type": "Organization",
          "name": "GEO-Max",
          "url": "https://geo-max.tech"
        }
      },
      {
        "@type": "SoftwareApplication",
        "position": 2,
        "name": "GEO-Score & Automated Reports (Teams)",
        "applicationCategory": "AnalyticsApplication",
        "operatingSystem": "Web",
        "url": "https://geo-max.tech/tools/score",
        "offers": {
          "@type": "Offer",
          "price": "0",
          "priceCurrency": "USD",
          "category": "FreeTrial",
          "availability": "https://schema.org/InStock"
        },
        "publisher": {
          "@type": "Organization",
          "name": "GEO-Max",
          "url": "https://geo-max.tech"
        }
      }
    ]
  }
  </script>

</section>
<!-- End Features -->
