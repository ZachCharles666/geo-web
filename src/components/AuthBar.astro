---
const compact = Astro.props.compact ?? false;
---

<div
  id="auth-bar"
  class={`w-full flex items-center justify-between gap-3 rounded-xl border border-slate-200 bg-white/70 px-4 py-2 backdrop-blur ${
    compact ? "text-xs" : "text-sm"
  }`}
>
  <div class="min-w-0 flex items-center gap-2">
    <span class="inline-flex h-2 w-2 rounded-full bg-slate-400" id="auth-dot"></span>
    <span class="text-slate-600">Account:</span>
    <span class="truncate font-medium text-slate-900" id="auth-email">Checkingâ€¦</span>
    <span class="text-slate-400" id="auth-tier" style="display:none;"></span>
  </div>

  <div class="flex items-center gap-2">
    <a
      id="auth-upgrade"
      href="/alpha"
      class="hidden rounded-lg border border-slate-200 px-3 py-1 text-slate-700 hover:bg-slate-50"
    >
      Upgrade
    </a>

    <a
      id="auth-login"
      href="/alpha-access?redirect="
      class="hidden rounded-lg bg-slate-900 px-3 py-1 text-white hover:bg-slate-800"
    >
      Login
    </a>

    <button
      id="auth-logout"
      class="hidden rounded-lg border border-slate-200 px-3 py-1 text-slate-700 hover:bg-slate-50"
      type="button"
    >
      Logout
    </button>
  </div>
</div>
