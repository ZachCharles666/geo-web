---
// E2_main.astro — Strong Comparison Section (GEO-Max vs Others)
const rows = [
  {
    tag: 'Proprietary Algorithms',
    ours: 'Purpose-built GEO algorithms tuned for AI retrieval and citation, with stable inclusion gains.',
    others: 'Generic rewriting with inconsistent visibility and hard-to-reproduce results.'
  },
  {
    tag: 'Operating Model',
    ours: 'Executed by our team via high-authority channels, including client-owned accounts if needed.',
    others: 'Account-dependent posting with uneven authority and unpredictable reach.'
  },
  {
    tag: 'Optimization Method',
    ours: 'Core terms → intent expansion → evidence reinforcement, improving both coverage and citation odds.',
    others: 'Surface-level keyword placement without sustained semantic lift.'
  },
  {
    tag: 'Platform Coverage',
    ours: 'Coordinated across major AI engines and ecosystems (ChatGPT, Claude, Gemini, Qwen, Kimi, etc.).',
    others: 'Single-platform attempts with no cross-engine alignment.'
  },
  {
    tag: 'Time to Visibility',
    ours: 'Fast lift with full materials — typically visible within 1–3 days.',
    others: 'Often slower (1–4 weeks) with larger fluctuations.'
  },
  {
    tag: 'Compliant Exposure Options',
    ours: 'Supports compliant contact/redeem signals where platforms allow.',
    others: 'Higher risk of suppression or removals.'
  },
  {
    tag: 'Workflow',
    ours: 'Submit → we execute end-to-end → pay after results are confirmed.',
    others: 'Clients manage multiple accounts and approvals themselves.'
  },
  {
    tag: 'Monitoring & Maintenance',
    ours: 'Continuous tracking during visibility windows with rapid rollback if anomalies appear.',
    others: 'Delayed maintenance and unclear risk controls.'
  }
];

---

<section id="advantage"
  class="max-w-[90rem] px-4 py-16 sm:px-6 lg:px-8 mx-auto"
  aria-labelledby="advantage-title">

  <div class="text-center mb-10 lg:mb-14">
    <h2 id="advantage-title" class="text-3xl lg:text-4xl font-bold text-gray-900 dark:text-gray-100">
      GEO-Max · Product Advantage Comparison
    </h2>
  </div>

  <div class="space-y-6">
    {rows.map((row, idx) => (
      <div class="relative rounded-2xl overflow-hidden ring-1 ring-gray-200/70 dark:ring-gray-700/70 shadow-sm">

        <!-- Vertical divider (desktop) -->
        <div class="hidden lg:block absolute inset-y-0 left-1/2 -translate-x-1/2 w-px
                    bg-gradient-to-b from-transparent via-white/60 to-transparent
                    dark:via-gray-500/50 z-10" aria-hidden="true"></div>

        <!-- VS badge (desktop) -->
        <div class="hidden lg:flex absolute inset-y-0 left-1/2 -translate-x-1/2 z-20
                    items-center justify-center pointer-events-none">
          <span class="inline-flex items-center justify-center h-12 w-12 rounded-full
                        bg-indigo-600 text-white font-extrabold shadow-md
                        ring-8 ring-white/80 dark:ring-gray-900/80">VS</span>
        </div>

        <div class="grid grid-cols-1 xl:grid-cols-2">

          <!-- Left: GEO-Max -->
          <article class="relative p-5 sm:p-7 lg:p-8 text-white
                          bg-gradient-to-br from-indigo-500 to-indigo-600
                          dark:from-indigo-600 dark:to-indigo-700">
            <div class="flex items-center gap-2 mb-2">
              <span class="inline-flex items-center rounded-md bg-white/20 px-2 py-0.5 text-[11px] font-semibold">
                GEO-Max
              </span>
              <h3 class="text-base sm:text-lg font-semibold">{row.tag}</h3>
            </div>

            <div class="mt-1 flex items-start gap-3 text-sm sm:text-[15px] leading-6">
              <svg class="mt-1 h-5 w-5 flex-none text-white/90" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd"
                  d="M16.704 5.29a1 1 0 0 1 .006 1.414l-7.2 7.3a1 1 0 0 1-1.42.01L3.29 9.51a1 1 0 1 1 1.42-1.41l3.05 3.07 6.5-6.59a1 1 0 0 1 1.444.01z"
                  clip-rule="evenodd" />
              </svg>
              <p>{row.ours}</p>
            </div>
          </article>

          <!-- Right: Others -->
          <article class="relative p-5 sm:p-7 lg:p-8
                          bg-gradient-to-br from-gray-100 to-gray-200
                          text-gray-800
                          dark:from-gray-800 dark:to-gray-700 dark:text-gray-100">

            <div class="flex items-center gap-2 mb-2">
              <span class="inline-flex items-center rounded-md bg-gray-700/15 dark:bg-black/30
                             px-2 py-0.5 text-[11px] font-semibold text-gray-700 dark:text-gray-200">
                Other GEO Services
              </span>
              <h3 class="text-base sm:text-lg font-semibold">{row.tag}</h3>
            </div>

            <div class="mt-1 flex items-start gap-3 text-sm sm:text-[15px] leading-6">
              <svg class="mt-1 h-5 w-5 flex-none text-gray-500 dark:text-gray-300" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd"
                  d="M6.22 6.22a.75.75 0 0 1 1.06 0L10 8.94l2.72-2.72a.75.75 0 1 1 1.06 1.06L11.06 10l2.72 2.72a.75.75 0 1 1-1.06 1.06L10 11.06l-2.72 2.72a.75.75 0 1 1-1.06-1.06L8.94 10 6.22 7.28a.75.75 0 0 1 0-1.06Z"
                  clip-rule="evenodd" />
              </svg>
              <p>{row.others}</p>
            </div>
          </article>
        </div>

        <!-- VS badge (mobile) -->
        <div class="lg:hidden flex items-center justify-center -my-2" aria-hidden="true">
          <span class="inline-flex items-center justify-center h-8 w-8 rounded-full
                        bg-blue-600 text-white text-xs font-extrabold shadow">
            VS
          </span>
        </div>
      </div>
    ))}
  </div>

  <p class="mt-6 text-center text-xs text-gray-500">
    * This comparison reflects typical scenarios; actual compliance rules and timing may vary by platform.
  </p>

  <!-- JSON-LD -->
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "ItemList",
    "name": "GEO-Max vs Other GEO Services — Comparison List",
    "itemListElement": [
      { "@type": "ListItem", "position": 1, "name": "Proprietary Algorithms" },
      { "@type": "ListItem", "position": 2, "name": "Product Model" },
      { "@type": "ListItem", "position": 3, "name": "Optimization Method" },
      { "@type": "ListItem", "position": 4, "name": "Platform Coverage" },
      { "@type": "ListItem", "position": 5, "name": "Speed of Visibility" },
      { "@type": "ListItem", "position": 6, "name": "Extra Exposure Options" },
      { "@type": "ListItem", "position": 7, "name": "Workflow" },
      { "@type": "ListItem", "position": 8, "name": "Maintenance & Monitoring" }
    ]
  }
  </script>
</section>
