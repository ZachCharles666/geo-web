---
export const prerender = true;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="robots" content="noindex, nofollow" />
    <!-- 无 JS 兜底：默认去 EN -->
    <meta http-equiv="refresh" content="0; url=/en" />
    <link rel="canonical" href="https://geo-max.tech/en" />
    <title>Redirecting… | GEO-Max</title>
  </head>
  <body>
    <script>
      (function () {
        try {
          var lang = (navigator.language || navigator.languages?.[0] || '').toLowerCase();
          var isZh = lang.startsWith('zh');
          window.location.replace(isZh ? "/zh" : "/en");
        } catch (e) {
          window.location.replace("/en");
        }
      })();
    </script>

    <noscript>
      <p>
        Redirecting… If it doesn’t happen, choose your language:
        <a href="/zh">中文</a> |
        <a href="/en">English</a>
      </p>
    </noscript>
  </body>
</html>
