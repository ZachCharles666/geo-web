---
import Layout from "../../layouts/Layout.astro";
import { LEGAL_ENTITY_NAME, SUPPORT_EMAIL, SITE_URL } from "../../config/site";

const pageTitle = "Refund Policy | GEO-Max";
const pageDesc = "Refund eligibility and how to request a refund for GEO-Max subscriptions.";
const canonical = "/en/refund";
const hreflangs = [
  { href: "/en/refund", hreflang: "en" },
  { href: "/zh/refund", hreflang: "zh-CN" },
];
const updatedAt = "2026-01-11";
---

<Layout
  title={pageTitle}
  description={pageDesc}
  canonical={canonical}
  lang="en"
  hreflangs={hreflangs}
>
  <main class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-12 sm:py-14">
    <h1 class="text-3xl sm:text-4xl font-semibold text-slate-900">Refund Policy</h1>
    <p class="mt-3 text-sm text-slate-500">Last updated: {updatedAt}</p>

    <div class="mt-8 space-y-8 text-sm sm:text-base text-slate-700 leading-relaxed">
      <section class="space-y-3">
        <p>We offer a 14-day refund policy.</p>
        <p>
          If you are not satisfied with your purchase, you may request a refund within 14 days of
          the initial payment date, no questions asked.
        </p>
      </section>

      <section class="space-y-3">
        <h2 class="text-xl font-semibold text-slate-900">How to Request a Refund</h2>
        <p>
          To request a refund, please email
          <a class="text-indigo-600 hover:underline" href={`mailto:${SUPPORT_EMAIL}`}>{SUPPORT_EMAIL}</a>
          and include:
        </p>
        <ul class="list-disc pl-5 space-y-1">
          <li>The email address associated with your account</li>
          <li>Your order details (e.g., receipt or transaction ID, if available)</li>
        </ul>
        <p>We typically respond within 3-5 business days.</p>
      </section>

      <section class="space-y-3">
        <h2 class="text-xl font-semibold text-slate-900">Refund Processing</h2>
        <p>
          Payments are processed by our billing provider. Approved refunds will be returned to the
          original payment method. Refund processing times may vary depending on your bank or card
          issuer.
        </p>
      </section>
    </div>
  </main>

  <script type="application/ld+json">
    {JSON.stringify({
      "@context": "https://schema.org",
      "@type": "WebPage",
      "name": pageTitle,
      "url": new URL(canonical, SITE_URL).toString(),
      "inLanguage": "en",
      "publisher": {
        "@type": "Organization",
        "name": LEGAL_ENTITY_NAME,
        "url": SITE_URL
      }
    })}
  </script>
</Layout>
