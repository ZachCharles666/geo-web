{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "moduleResolution": "bundler",
    "paths": { "@/*": ["./src/*"] },
    "types": ["node", "astro/client"],
    "lib": ["ES2022", "DOM"],
    "skipLibCheck": true
  },
  "include": ["src/**/*", "astro.config.mjs", "serverless/lead-collect.js","**/*.ts", "**/*.vue", "**/*.tsx"],
  "exclude": ["node_modules", "dist", ".astro", ".output", ".vercel"]
}
